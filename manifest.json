{
  "manifest_version": 2,
  "name": "Porn Limiter",
  "version": "1.0",
  "description": "Blocks adult sites and tracks visited domains.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Porn Limiter",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "blocked.html"
  ]
}
